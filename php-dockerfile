FROM php:7.4-apache

#Install PHP modules & dependencies for Expression Engine
RUN apt-get update && \
    apt-get install -y \
    libfreetype6-dev \
    libjpeg62-turbo-dev \
    libpng-dev \
    nano \
    gnupg gnupg2 gnupg1 systemctl \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) gd
 
RUN apt-get update && apt-get install -y zlib1g-dev pkg-config \ 
    libcurl4-openssl-dev libzip-dev
RUN docker-php-ext-install pdo pdo_mysql mysqli fileinfo zip iconv 